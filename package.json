{
  "name": "photobooth",
  "version": "1.0.0",
  "description": "Windows Desktop Photobooth với Canon camera, Google Drive upload, và QR code download",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "node scripts/electron-vite-without-run-as-node.js dev",
    "build": "electron-vite build",
    "preview": "node scripts/electron-vite-without-run-as-node.js preview",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@electron/get": "^4.0.2",
    "@fontsource-variable/fredoka": "^5.2.10",
    "@fontsource-variable/nunito": "^5.2.7",
    "@fontsource-variable/quicksand": "^5.2.10",
    "@fontsource/fredoka": "^5.2.10",
    "@fontsource/nunito": "^5.2.7",
    "chokidar": "^5.0.0",
    "cloudinary": "^2.9.0",
    "dotenv": "^17.2.4",
    "electron-store": "^8.1.0",
    "googleapis": "^171.4.0",
    "lucide-react": "^0.563.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.17",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "happy-dom": "^20.5.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.photobooth.app",
    "productName": "Photobooth",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "src/main/assets/service_account.json",
        "to": "service_account.json"
      }
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "@img/sharp-win32-x64": "^0.34.5"
  }
}
