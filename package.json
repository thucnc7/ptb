{
  "name": "photobooth",
  "version": "1.0.0",
  "description": "Windows Desktop Photobooth với Canon camera, Google Drive upload, và QR code download",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "cross-env ELECTRON_RUN_AS_NODE= electron-vite dev",
    "build": "electron-vite build",
    "preview": "cross-env ELECTRON_RUN_AS_NODE= electron-vite preview",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@electron/get": "^4.0.2",
    "chokidar": "^5.0.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.17",
    "cross-env": "^10.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "happy-dom": "^20.5.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.photobooth.app",
    "productName": "Photobooth",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
